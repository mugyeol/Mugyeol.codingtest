<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.winningnumber.WinningNumber">


    <TextView
        android:id="@+id/winningHeader"
        android:layout_marginTop="30dp"
        android:text="N회차 1등 번호 입니다"
        android:gravity="center"
        android:textSize="25dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/winningLinearNum"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wnum1"
            android:gravity="center"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/wnum2"
            android:gravity="center"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/wnum3"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/wnum4"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/wnum5"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/wnum6"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:gravity="center"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus"
            android:textSize="@dimen/plusSize"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/wnum7"
            android:layout_marginStart="@dimen/numMargin"
            android:layout_width="@dimen/numWidthHeight"
            android:layout_height="@dimen/numWidthHeight"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/winningExit"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/exit"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</LinearLayout>