<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="17dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numfrequencyNum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_width="@dimen/numWidthHeight3"
        android:layout_height="@dimen/numWidthHeight3" />

    <View
        android:id="@+id/numfrequencyView"
        android:layout_marginStart="60dp"

        app:layout_constraintTop_toTopOf="@id/numfrequencyNum"
        app:layout_constraintBottom_toBottomOf="@id/numfrequencyNum"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/cornerroundgray"
        android:layout_height="13dp"
        android:layout_width="200dp"


        />
    <TextView
        android:id="@+id/numFrequencyCounting"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/numfrequencyView"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="42dp"
        android:layout_height="42dp" />

</androidx.constraintlayout.widget.ConstraintLayout>





