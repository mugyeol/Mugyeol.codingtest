<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/caritem_constraint"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/caritem_cardview"
        card:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        card:cardCornerRadius="3dp"
        card:cardUseCompatPadding="true"
        card:cardElevation="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/caritem_linear"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/caritem_description"
                android:textSize="12sp"
                android:textColor="@color/black_60"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/caritem_carid"
                android:textSize="20sp"
                android:textColor="@color/black_87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:id="@+id/caritem_favoriteicon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/button_favorite"
                    android:text=""
                    android:textOff=""
                    android:textOn=""

                    />
                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capa"
                    android:textColor="@color/black_60"

                    />
                <TextView
                    android:id="@+id/caritem_loadqty"
                    android:textColor="@color/black_60"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>